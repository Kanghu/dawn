<style>
.footer {
    font-family: Roboto, sans-serif;
    font-size: 1.3rem;
    background: #222;
    color: rgb(252, 252, 252);
}

.footer-middle .widget-title {
    padding: 0.6rem 0;
    margin-bottom: .9rem;
    font-family: 'Roboto', sans-serif;
    font-size: 1.6rem;
    font-weight: 100;
    letter-spacing: 0;
    text-transform: uppercase;
    color: #ffffff;
}

.footer-middle {
    padding: 4.2rem 0 1.8rem;
    border-bottom: 1px solid #333;
}

.footer h4, h5 {
  color:rgb(252, 252, 252);
}
</style>

<footer class="footer" data-section-id="{{ section.id }}" data-section-type="footer">
  <div class="container">
    <div class="footer-middle">
      <div class="row">
        <!-- Company Info & Logo -->
        <div class="col-lg-3 footer-logo">
          <div class="row">
            <div class="col-lg-12 col-md-12 pb-10 mb-10">
              <a href="{{ shop.url }}" class="logo-footer">
                <img src="{{ 'logo-footer.webp' | file_url }}" alt="logo-footer" width="154" height="43" />
              </a>
            </div>
            <div>Copyright 2020-{{ "now" | date : "%Y" }} S.C. ATLANTIC LOGISTIC CONCEPT S.R.L.</div>
            <div>CUI 43286659 Reg Com J23/5258/04.11.2020</div>
          </div>
        </div>

        <!-- Footer Navigation -->
        <div class="col-sm-12 col-lg-9">
          <div class="row footer-widgets">
            <!-- Section 1 (Despre noi) -->
            <div class="col-lg-2 col-md-6">
              <div class="widget ml-lg-4">
                <h4 class="widget-title">Despre noi</h4>
                <ul class="widget-body">
                  {% for link in linklists.footer-about.links %}
                  <li>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                  {% endfor %}
                </ul>
              </div>
            </div>

            <!-- Section 2 (Utile) -->
            <div class="col-lg-2 col-md-6">
              <div class="widget ml-lg-4">
                <h4 class="widget-title">Utile</h4>
                <ul class="widget-body">
                  {% for link in linklists.footer-utile.links %}
                  <li>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                  {% endfor %}
                </ul>
              </div>
            </div>

            <!-- Section 3 (Business) -->
            <div class="col-lg-2 col-md-6">
              <div class="widget widget-info">
                <h4 class="widget-title">Business</h4>
                <ul class="widget-body">
                  {% for link in linklists.footer-business.links %}
                  <li>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                  {% endfor %}
                </ul>
              </div>
            </div>

            <!-- Section 4 (Termeni) -->
            <div class="col-lg-2 col-md-6">
              <div class="widget widget-info">
                <h4 class="widget-title">Termeni</h4>
                <ul class="widget-body">
                  {% for link in linklists.footer-termeni.links %}
                  <li>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                  {% endfor %}
                </ul>
              </div>
            </div>

            <!-- Section 5 (Contact) -->
            <div class="col-lg-2 col-md-6">
              <div class="widget widget-info">
                <h4 class="widget-title">Contact</h4>
                <ul class="widget-body">
                  <li class="d-flex align-items-center">
                    <!-- phone icon -->
                    <svg width="18px" height="18px" class="mr-1" ...>...</svg>
                    <a href="tel:021 555 7252">021 555 7252</a>
                  </li>
                  <li class="d-flex align-items-center">
                    <!-- whatsapp icon -->
                    <svg width="24px" height="24px" class="mr-1" ...>...</svg>
                    <a href="https://api.whatsapp.com/send?phone=40723029676&amp;text=Salut" target="_blank"
                      >0723029676</a
                    >
                  </li>
                  <li class="d-flex align-items-center">
                    <!-- email icon -->
                    <svg width="20px" height="20px" class="mr-1" ...>...</svg>
                    <a href="mailto:contact@alessandrodesign.ro" style="word-wrap: break-word"
                      >contact@alessandrodesign.ro</a
                    >
                  </li>
                </ul>
              </div>
            </div>

            <!-- Section 6 (Program) -->
            <div class="col-lg-2 col-md-6">
              <h4 class="widget-title">&nbsp;</h4>
              <div class="widget widget-info">
                <ul class="widget-body">
                  <li class="d-flex align-items-center">
                    <!-- schedule icon -->
                    <svg width="20px" height="20px" class="mr-1" ...>...</svg>
                    <div>Program Relatii Clienti: L-V: 10-18</div>
                  </li>
                  <li class="d-flex align-items-center">
                    <!-- location icon -->
                    <svg width="24px" height="24px" class="mr-1" ...>...</svg>
                    <div>Showroom Voluntari: L-V: 9-18; S: 9-15; Showroom Vulcanescu: L-V: 10-19; S: 10-16;</div>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <div class="col-sm-12 mobile-company-info text-center">
          <div>Copyright 2020-{{ "now" | date : "%Y" }} S.C. ATLANTIC LOGISTIC CONCEPT S.R.L.</div>
          <div>CUI 43286659 Reg Com J23/5258/04.11.2020</div>
        </div>
      </div>
    </div>

    <div class="footer-bottom justify-content-center" style="position: relative">
      <div class="footer-center">
        <div class="row">
          <div class="col-lg-3">
            <div class="d-flex justify-content-center netopia-payments">
              <img
                title="NETOPIA Payments"
                src="{{ 'np-pay-horizontal.svg' | asset_url }}"
                style="width: 100%; height: 100%; max-width: 280px; cursor: pointer"
              />
            </div>
          </div>
          <div class="col-lg-9">
            <div class="d-flex justify-content-center">
              <a href="https://anpc.ro/ce-este-sal/" rel="nofollow" target="_blank" class="mr-10">
                <img src="{{ 'anpc-sal.webp' | asset_url }}" alt="anpc" style="max-height: 60px" />
              </a>
              <a
                href="https://ec.europa.eu/consumers/odr/main/index.cfm?event=main.home2.show&amp;lng=RO"
                rel="nofollow"
                target="_blank"
              >
                <img src="{{ 'anpc-sol.webp' | asset_url }}" alt="anpc" style="max-height: 60px" />
              </a>
            </div>
          </div>
        </div>
        <p class="copyright text-center mt-2">
          Developed with â™¡ by <a href="https://atlanticlogisticconcept.ro" title="ALC">ALC</a>
        </p>
      </div>
      <div class="social-links">
        <a
          href="https://www.facebook.com/alessandrodesign.ro"
          target="_blank"
          class="social-link social-facebook fab fa-facebook-f"
        ></a>
        <a
          href="https://www.instagram.com/alessandrodesign.ro/"
          target="_blank"
          class="social-link social-instagram fab fa-instagram"
        ></a>
        <a
          href="https://www.youtube.com/channel/UCIhyazE1pBVcDZZlf-_JeSg"
          target="_blank"
          class="social-link social-youtube fab fa-youtube"
        ></a>
      </div>
    </div>
    <!-- End FooterBottom -->
  </div>
</footer>

